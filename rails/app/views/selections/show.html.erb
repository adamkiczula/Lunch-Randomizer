<div class="block">
  <div class="secondary-navigation">
    <ul class="wat-cf">
      <li class="first"><%= link_to "#{t("web-app-theme.list", :default => "List")}", selections_path  %></li>
      <li><%= link_to "#{t("web-app-theme.new", :default => "New")}", new_selection_path %></li>
      <li class="active"><%= link_to "#{t("web-app-theme.show", :default => "Show")}", selection_path %></li>
    </ul>
  </div>          
  <div class="content">
    <div class="inner">
      
        <p>
          <b><%= t("activerecord.attributes.selection.date_created", :default => t("activerecord.labels.date_created", :default => "Date created")) %>:</b>
          <%= @selection.date_created %>
        </p>

        <p>
          <b><%= t("activerecord.attributes.selection.place_id", :default => t("activerecord.labels.place_id", :default => "Place")) %>:</b>
          <%= @selection.place_id %>
        </p>
      <div class="wat-cf">
        <%= link_to image_tag("web-app-theme/icons/application_edit.png", :alt => "#{t("web-app-theme.edit", :default=> "Edit")}") + " " + t("web-app-theme.edit", :default=> "Edit"), edit_selection_path(@selection), :class => "button" %> 
        <%= link_to image_tag("web-app-theme/icons/cross.png", :alt => "#{t("web-app-theme.delete", :default=> "Delete")}") + " " + t("web-app-theme.delete", :default => "Delete"), selection_path(@selection), :method => "delete", :class => "button", :confirm => "#{t("web-app-theme.confirm", :default => "Are you sure?")}" %>
      </div>      
    </div>
  </div>
</div>

<% content_for :sidebar, render(:partial => 'sidebar') -%>