<div class="block">
  <div class="secondary-navigation">
    <ul class="wat-cf">
      <li class="first active"><%= link_to "#{t("web-app-theme.list", :default => "List")}", selections_path  %></li>
    </ul>
  </div>          
  <div class="content">          
    <h2 class="title"><%= t("web-app-theme.all", :default => "All")  %> Selections</h2>
    <div class="inner">
      <table class="table">
        <tr>             
          <th class="first">Name</th>
          <th>
            <%= t("activerecord.attributes.category.name", :default => t("activerecord.labels.category", :default => "Category")) %>
          </th>
          <th><%= t("activerecord.attributes.selection.date_created", :default => t("activerecord.labels.date_created", :default => "Date Created")) %></th>
          <th class="last">&nbsp;</th>
        </tr>
        <% @selections.each do |selection| -%>
        <tr class="<%= cycle("odd", "even") %>">
          <td>
            <%= selection.place.name %>
          </td>
          <td>
            <%= selection.place.category.name %>
          </td>
          <td>
            <%= selection.date_created %>
          </td>
          <td class="last">&nbsp;</td>
        </tr>          
        <% end -%>
      </table>
      <div class="actions-bar wat-cf">
        <div class="actions">
        </div>
        
      </div>
    </div>
  </div>
</div>

<% content_for :sidebar, render(:partial => 'sidebar') -%>
